{
	"version": "0.1.0",
	"command": "npm",
	"isShellCommand": true,
	"showOutput": "always",
	"suppressTaskName": true,
	"tasks": [
		{
			"taskName": "build",
			"args": ["run", "build"],
			"isBuildCommand": true
		},
		{
			"taskName": "test",
			"args": ["run", "test"],
			"isTestCommand": true
		},
		{
			"taskName": "watch",
			"args": ["run", "test:watch"],
			"isTestCommand": true,
			"isWatching": true
		}
	]
}
